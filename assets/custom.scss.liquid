// Intro text [ Section ]
.intro-text__content{
  max-width: 768px;
  margin: 0 auto;
  width: 90%;

  p {
    display: block;
    font-family: "Crimson Text", serif;
    font-size: 2.2em;
    font-weight: 600;
    font-style: normal;
    line-height: 1.4;
    margin: 0 0 0.5em;
    margin-block-start: 0;
    margin-block-end: 0;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }
}

.intro-text__content--left {
  text-align: left;
}

.intro-text__content--center {
  text-align: center;
}

.intro-text__content--right {
  text-align: right;
}