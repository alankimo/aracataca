// Colors
$success-green: #4caf50;
$white: #ffffff;

// Breakpoints
$theme-desktop: 990px;

// Intro text [ Section ]
.intro-text__content {
  max-width: 768px;
  margin: 0 auto;
  width: 90%;

  p {
    display: block;
    font-family: "Crimson Text", serif;
    font-weight: 600;
    font-style: normal;
    line-height: 1.4;
    margin: 0 0 0.5em;
    margin-block-start: 0;
    margin-block-end: 0;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }
}

.intro-text__content--left {
  text-align: left;
}

.intro-text__content--center {
  text-align: center;
}

.intro-text__content--right {
  text-align: right;
}

.full--vh-slick {
  height: 100vh !important;
}

/* App Globo Shipping */
.method-content_pickup {
  .methodDescription,
  .store-content {
    display:  none !important;
  }
}

// Dynamic Section [ Contact Form ]
.contact-form-section {
  padding-bottom: 2.5em;
  padding-top: 2.5em;
}

// Form messsages
.contact-form {
  .form-success {
    background: $success-green;
    color: $white;
    font-weight: bold;
    margin: 1.2em 0 0;
  }
  
  .errors {
    color: $white;
    font-weight: bold;
    margin: 1.2em 0 0;
    padding: .625rem 1.25rem;
  }
}

.grid--one-element {
  margin: 0;
}

.grid__item--single-form {
  padding-left: 0;
  width: 100%;

  form {
    margin: 0 auto;
    max-width: 800px;
  }
}